@Post("sample/crud/post/query/user")
user function postQueryUser()
    local cID       := ''
    local cUser     := ''
    local cName     := ''
    local cNick     := ''
    local jQuery    := jSonObject():New()

    jQuery := oRest:getQueryRequest()

    if ( jQuery <> Nil )
        cUser   := jQuery[ 'user'   ]
        cName   := jQuery[ 'name'   ]
        cNick   := jQuery[ 'nick'   ]
    endif
return processPostUser(cID, cUser, cName, cNick)

